<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="poster_title">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="poster">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/placeholder_for_missing_posters</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">@dimen/toolbar_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchInputText">
        <item name="android:textSize">@dimen/search_input</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
